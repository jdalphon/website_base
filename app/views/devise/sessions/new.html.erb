<%= devise_error_messages! %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h2>Sign in</h2>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), role: "form") do |f| %>
      <div class="form-group">
        <div><%= f.label :email %><br />
        <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder:'user@email.com'%></div>
      </div>
      <div class="form-group">
        <div><%= f.label :password %><br />
        <%= f.password_field :password, class: "form-control", placeholder: "********" %></div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <div><%= f.submit "Sign in", class: "btn btn-default" %></div>
    <% end %>
  </div>
  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>