<h1>Lists</h1>
  <div class="row">
    <div class="col-xs-6">
      <table class="table table-striped">
        <tbody>
          <% @lists.each do |list| %>
            <tr>
              <td class='list'><%= link_to list.title, list_path(list) %></td>
              <td> by: <%= list.user.email %> </td>
              <td> on: <%= list.created_at.strftime('%b %d, %Y') %><td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <% if user_signed_in? %>
      <%= link_to 'New List', new_list_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>