<div class="panel panel-default">
  <div class="panel-heading list-heading">
    <div class="heading">
      <%= @list.title %>
    </div>
    <div id="completeness"></div>
  </div>
  <div class="panel-body">
    <div id="list_body">
      <% if @list.body == ''%>
        <span class="no_list">No list yet, hit edit to start one</span>
      <% else %>
        <%= raw @list.body %>
      <% end %>
    </div>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-md-4">
        <%= form_for @list do |f| %>
          <% if current_user.try(:id) == @list.user_id%>
            <%= f.hidden_field :body, id:'list_body_form' %>
            <%= f.hidden_field :completeness, id: 'list_completeness' %>
            <%= f.button class: 'btn btn-primary', id: 'save_button', type: 'submit' do%>
              <i class="fa fa-floppy-o"> Save </i>
            <% end %>
            <%= f.button 'Cancel', class: 'btn btn-danger', id: 'cancel_button'%>
            <%= link_to edit_list_path(@list), class: 'btn btn-default pull-right' do%>
              <i class="fa fa-cog"> Edit</i>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
  
<br/>
