<div class="row">
  <div class="col-xs-12">
    <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Category</th>
      </tr>
    </thead>

    <tbody>
      <% @blog_posts.each do |blog_post| %>
        <tr>
          <td><%= link_to blog_post.title, blog_post_path(blog_post) %> <i>(<%= time_ago_in_words(blog_post.created_at) %>)</i></td>
          <td><%= blog_post.category %></td>
          <td><%= blog_post.created_at.strftime('%b %d, %Y') %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>
<br>
<% if user_signed_in? %>
  <%= link_to 'New Blog post', new_blog_post_path %>
<% end %>