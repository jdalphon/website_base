<div class="row">
  <div class="col-xs-12">
    <h1>Blog</h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Category</th>
      </tr>
    </thead>

    <tbody>
      <% @blog_posts.each do |blog_post| %>
        <tr>
          <td><%= link_to blog_post.title, blog_post_path(blog_post) %></td>
          <td><%= blog_post.category %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Blog post', new_blog_post_path %>
